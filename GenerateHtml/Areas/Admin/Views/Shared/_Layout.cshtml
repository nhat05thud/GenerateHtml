@using GenerateHtml.ClassHelpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="/Areas/Admin/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="/Areas/Admin/Content/bootstrap.min.css" rel="stylesheet" />
    @*<link href="/Areas/Admin/Content/dataTables.bootstrap.min.css" rel="stylesheet" />*@
    <link href="/Areas/Admin/Content/jquery-ui.min.css" rel="stylesheet" />
    <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="/Areas/Admin/Content/Site.css" rel="stylesheet" />
    <script src="/Areas/Admin/Scripts/jquery-1.10.2.min.js"></script>
    <script src="/Areas/Admin/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/Areas/Admin/Scripts/jquery.validate.min.js"></script>
    <script src="/Areas/Admin/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div class="body-content">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="collapse navbar-collapse">
                <div class="container">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item @Html.IsSelected(actions: "Index", controllers: "Home")">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">Components</a>
                        </li>
                        <li class="nav-item @Html.IsSelected(actions: "Index", controllers: "Category")">
                            <a class="nav-link" href="@Url.Action("Index", "Category")">Category</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            @RenderBody()
        </div>
        <hr />
        <div class="container">
            <footer>
                <p>Nhật</p>
            </footer>
        </div>
    </div>
    <script src="/Areas/Admin/Scripts/bootstrap.min.js"></script>
    <script src="/Areas/Admin/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="/Areas/Admin/Scripts/jquery.dataTables.min.js"></script>
    @*<script src="/Areas/Admin/Scripts/dataTables.bootstrap.min.js"></script>*@
    <script src="/Areas/Admin/Content/ckeditor/ckeditor.js"></script>
    <script src="/Areas/Admin/Content/ckeditor/sk-init.js"></script>
    <script src="/Areas/Admin/Scripts/notify.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>