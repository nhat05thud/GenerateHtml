@model GenerateHtml.Models.HtmlComponentCategoryViewModel
@{
    Layout = null;
}
@using (Ajax.BeginForm("AddOrEdit", "Category", null, new AjaxOptions
{
    HttpMethod = "POST",
    OnSuccess = "onSuccess",
    OnFailure = "onFailure"
}, new { id = "addOrEditForm", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label>Name</label>
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name)
    </div>
    <div class="form-group text-center">
        <input type="submit" value="Submit" class="btn btn-primary" style="padding: 10px 50px;" />
    </div>
}
